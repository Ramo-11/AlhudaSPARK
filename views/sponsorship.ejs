<!-- Registration Form -->
<section class="registration-section">
    <div class="container">
        <div class="form-container">
            <h2 class="form-title">Sponsor Registration</h2>
            
            <!-- Success Message -->
            <div id="successMessage" class="alert alert-success" style="display: none;">
                <strong>Success!</strong> <span id="successText"></span>
            </div>

            <!-- Error Message -->
            <div id="errorMessage" class="alert alert-error" style="display: none;">
                <strong>Error:</strong> <span id="errorText"></span>
            </div>

            <form id="sponsorshipForm" class="sponsor-form">
                <!-- Selected Tier Display -->
                <div class="selected-tier-display" id="selectedTierDisplay" style="display: none;">
                    <span class="selected-label">Selected Tier:</span>
                    <span class="selected-tier" id="selectedTierText"></span>
                    <span class="selected-amount" id="selectedAmountText"></span>
                    <button type="button" class="change-tier">Change</button>
                </div>

                <!-- Company Information -->
                <div class="form-section">
                    <h3 class="form-section-title">Company Information</h3>
                    <div class="form-grid">
                        <div class="form-group">
                            <label for="companyName">Company Name *</label>
                            <input type="text" id="companyName" name="companyName" required>
                        </div>
                        <div class="form-group">
                            <label for="contactPerson">Contact Person *</label>
                            <input type="text" id="contactPerson" name="contactPerson" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email Address *</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone Number *</label>
                            <input type="tel" id="phone" name="phone" required>
                        </div>
                        <div class="form-group full-width">
                            <label for="address">Company Address</label>
                            <input type="text" id="address" name="address">
                        </div>
                        <div class="form-group full-width">
                            <label for="website">Company Website</label>
                            <input type="url" id="website" name="website" placeholder="https://">
                        </div>
                    </div>
                </div>

                <!-- Hidden Tier Selection -->
                <input type="hidden" id="selectedTier" name="selectedTier" required>
                <input type="hidden" id="sponsorAmount" name="sponsorAmount" required>

                <!-- Payment Method -->
                <div class="form-section">
                    <h3 class="form-section-title">Payment Method</h3>
                    <div class="payment-methods">
                        <label class="payment-option">
                            <input type="radio" name="paymentMethod" value="check" required>
                            <div class="payment-card">
                                <span class="payment-icon">‚úì</span>
                                <span class="payment-name">Check</span>
                                <span class="payment-note">No fees</span>
                            </div>
                        </label>
                        <label class="payment-option">
                            <input type="radio" name="paymentMethod" value="zelle" required>
                            <div class="payment-card">
                                <span class="payment-icon">Z</span>
                                <span class="payment-name">Zelle</span>
                                <span class="payment-note">No fees</span>
                            </div>
                        </label>
                        <label class="payment-option">
                            <input type="radio" name="paymentMethod" value="venmo" required>
                            <div class="payment-card">
                                <span class="payment-icon">V</span>
                                <span class="payment-name">Venmo</span>
                                <span class="payment-note">No fees</span>
                            </div>
                        </label>
                        <label class="payment-option">
                            <input type="radio" name="paymentMethod" value="stripe" required>
                            <div class="payment-card">
                                <span class="payment-icon">üí≥</span>
                                <span class="payment-name">Credit/Debit Card</span>
                                <span class="payment-note">3% processing fee</span>
                            </div>
                        </label>
                        <label class="payment-option">
                            <input type="radio" name="paymentMethod" value="zeffy" required>
                            <div class="payment-card">
                                <span class="payment-icon">Z</span>
                                <span class="payment-name">Zeffy</span>
                                <span class="payment-note">Optional donation fee</span>
                            </div>
                        </label>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="form-section">
                    <div class="form-group full-width">
                        <label for="comments">Additional Comments or Special Requests</label>
                        <textarea id="comments" name="comments" rows="4"></textarea>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary btn-large" id="submitBtn">
                        Complete Registration
                    </button>
                    <p class="form-note">
                        * Required fields
                    </p>
                </div>
            </form>
        </div>
    </div>
</section>

<!-- Payment Instructions Modal -->
